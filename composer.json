{
    "name": "keboola/runner-staging-test",
    "description": "Component for testing ABS and S3 input stages",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "keboola/job-queue-api-php-client": "^0.0.2",
        "keboola/php-component": "^8.1",
        "symfony/finder": "^5.1"
    },
    "require-dev": {
        "keboola/coding-standard": ">=7.0.2",
        "keboola/datadir-tests": "^5.0",
        "keboola/php-temp": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^9.0",
        "symfony/process": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\RunnerStagingTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\RunnerConfigTest\\Tests\\": "tests/phpunit/",
            "Keboola\\RunnerConfigTest\\FunctionalTests\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
